{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "lib": ["es7", "dom"],
    "declaration": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["typings", "lib", "test"]
}
